---
# RKE2 running in Azure VMs
k3s:
  enabled: true
controller:
  replicas: 2
cve:
  scanner:
    replicas: 2
manager:
  ingress:
    enabled: true
    host: neuvector.20.224.98.227.sslip.io
    ingressClassName: nginx
    annotations:
      cert-manager.io/cluster-issuer: selfsigned-cluster-issuer
      nginx.ingress.kubernetes.io/backend-protocol: "HTTPS"
    tls: true
    secretName: neuvector-tls-secret
